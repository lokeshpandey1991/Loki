<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Roche Parent Component"
    sling:resourceType="granite/ui/components/foundation/section">
    <layout
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <fieldset
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Roche Parent Input"
                    sling:resourceType="granite/ui/components/foundation/form/fieldset">
                    <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                    <items jcr:primaryType="nt:unstructured">
                        <column
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <isPersonalized
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    name="./isPersonalized"
                                    text="Activation for Personalization"
                                    value="false"/>
                                <isProtected
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                    name="./isProtected"
                                    text="Activation for Authorization"/>
                                <componentAnalyticsClass
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Define Component Analytics DIV Class"
                                    fieldLabel="Component Analytics DIV Class"
                                    name="./componentAnalyticsClass"/>
                                <componentAutomationClass
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Define Component Automation DIV Class"
                                    fieldLabel="Component Automation DIV Class"
                                    name="./componentAutomationClass"/>
                                <imagePath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/fileupload"
                                    allowUpload="{Boolean}false"
                                    autoStart="{Boolean}false"
                                    class="cq-droptarget"
                                    fieldDescription="Upload Image or Video Asset"
                                    fieldLabel="Roche Pharma Dam asset"
                                    fileNameParameter="./imagePath"
                                    fileReferenceParameter="./fileReference"
                                    mimeTypes="[image,video/.*]"
                                    multiple="{Boolean}false"
                                    name="./imagePath"
                                    title="Upload Image or Video Asset"
                                    uploadUrl="${suffix.path}"
                                    useHTML5="{Boolean}true"/>
                                <altText
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Provide a textual alternative of the content and function of the image."
                                    fieldLabel="Alternative Text"
                                    name="./altText"/>
                            </items>
                        </column>
                    </items>
                </fieldset>
            </items>
        </column>
    </items>
</jcr:root>
